/* pages/me/me.wxss */
.container {
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  padding: 0;
  box-sizing: border-box;
}

.navigator-box {
  width: 100%;
  background: #F8F8F8;
}

.navigator-section {
  margin: 20rpx;
  background: #fff;
}

.navigator-icon {
  margin-right: 0.5rem;
  color: #0ba360;
  font-size: 1.5rem;
  text-shadow: 1px 1px 1px #ddd, 0 3px 5px rgb(200,200,200,0.7);
}

button.navigator {
  text-align: left;
  background: #fff;
  line-height: 1.555556;
  border: none;
}

button.navigator::after {
  border: none;
}

.mh-logo-container {
  width: 100%;
  display: flex;
  justify-content: center;
}

.mh-logo-container view {
  width: 100%;
  margin: 20rpx;
  background: #fff;
  text-align: center;
  padding: 20rpx 0;
}
