/* pages/me/me.wxss */
.container {
  height: 400px;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: start;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}

.user-details-header {
  background: #0ba360;
  color: #fff;

  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 20rpx;
}