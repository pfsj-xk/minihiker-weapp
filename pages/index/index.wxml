<!--index.wxml-->
<view class="container">

  <view wx:for="{{trips}}" class='trip-wrapper'>

    <view class='image-container'>
      <image src='{{item.cover}}'>
      </image>
    </view>

    <view id='trip-details-container'>
      <h1 id='trip-details-name'>{{ item.name }}</h1>
      <view id='trip-details-description'>{{ item.description }}</view>
    </view>   

  </view>

</view>
