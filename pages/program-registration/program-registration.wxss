.program-group-cover-image {
  width: 100%;
}

.program-details {
  position: relative;
  display: flex;
  justify-content: space-between;
  margin: 20rpx;
}

.program-dates {
  font-size: 1rem;
  color: #999;
}

.select-price-warning-container {
  position: absolute;
  bottom: -5px;
  right: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 300ms ease-in-out;
  opacity: 0;
}

.warning-visible {
  z-index: 99;
  bottom: -40px;
  opacity: 1;
}

.select-price-warning-alert {
  padding: 0.3rem 1rem;
  border: 1px solid #b52b27;
  color: #b52b27;
  background-color: #e7908e;
  border-radius: 10px;
}

.program-prices {
  display: flex;
  flex-wrap: wrap;

  margin: 20rpx;
}

.program-price-container{
  position: relative;
  box-shadow: 0 0 1px 1px #888, 0 0 3px 2px rgba(0,0,0,0.15);
  transition: all 0.3s ease-in-out;

  color:#aaa;
  margin: 0 0.5rem 0.3rem 0;
  padding: 0.3rem;
  box-sizing: border-box;
  border-radius: 5px;
}

.program-price-container::after {
  content: '';
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  opacity: 0;
  border-radius: 5px;
  box-shadow: 0 0 15px 5px #0ba360;
  transition: opacity 0.3s ease-in-out;
}

/* Scale up the box */
.program-price-container:active {
  transform: scale(0.8, 0.8);
}

/* Fade in the pseudo-element with the bigger shadow */
.program-price-container:active::after {
  opacity: 1;
}

.program-prices .selected-price {
  box-shadow: 0 0 2px 1px #3cba92;
  color: #444;
}

.refund-description-header {
  font-weight: bold;
}

.program-refund-description-container {
  margin: 20rpx 10px;
}

.program-refund-description-container {
  padding-bottom: 50px;
}

.payment-details {
  background: linear-gradient(to bottom, #606c88 0%,#3f4c6b 100%);
  color: #fff;

  position: fixed;
  bottom: 0;

  padding-left: 20rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.payment-details button {
  border-radius: 0;
  border-right: none;
  width: 10rem;
  color: white;
  text-shadow: 1px 1px 2px #444, 0 0 0.2em #ddd;
  
  background-image: radial-gradient(at 10% 10%, #0ba360 0%, #3cba92 100%);
}

/** Modal styles **/
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
}

.modal-dialog {
  width: 80%;
  height: fit-content;
  overflow: hidden;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.field {
  margin: 15px 0;
}

.highlight {
  font-weight: bold;
  margin-right: 1rem;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #ec5300;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #666;
  text-align: center;
}
