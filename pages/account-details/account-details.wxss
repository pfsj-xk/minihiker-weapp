/* pages/account-information/account-details.wxss */
.user-details-header {
  background-image: linear-gradient(-20deg, #e9defa 0%, #fbfcdb 100%),
    linear-gradient(to top, #c1dfc4 0%, #deecdd 100%), 
    linear-gradient(-20deg, #d558c8 0%, #24d292 100%);

  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 2rem;
  height: 12em;
}

.profile-info-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 4rem;
  height: 4rem;
  border-radius: 50%;
  margin: 20rpx;
}

.user-nickname {
  font-size: 1.2rem;
  font-weight: bold;
}

.header-logo-blur {
  width: 8rem;
  height: 8rem;
  opacity: 0.4;
}

.account-info-details > view, .errors-container > view {
  margin-bottom: 0.3rem;
}

.client-info-header, .client-container, .account-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.edit-user-icon, #add-client-icon {
  color: #0ba360;
  font-size: 1.5rem;
  text-shadow: 1px 1px 1px #ddd, 0 3px 5px rgb(200,200,200,0.7);
}

.client-container .client-index {
  font-size: 0.7rem;
  color: #777;
}

.has-error .client-index, .errors-container, .error-container {
  color: rgb(220,53,69);
}

.missing-attribute-name {
  font-weight: bold;
}

.international-header {
  margin-top: 0.7rem;
  font-size: 0.7rem;
  color: #777;
}
