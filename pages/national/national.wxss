/* pages/national/national.wxss */
.container {
  align-items: stretch;
}

.no-programs-message-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
}

.no-programs-message-container icon, 
.no-programs-body, 
.no-programs-header {
  margin-bottom: 1rem;
}

.no-programs-header {
  font-size: 1.7rem;
  font-weight: bold;
}

.filters-container {
  width: 100%;
  display: flex;
  font: 0.8rem;
  background-color: #fff;
  border-bottom: 1px solid #ccc;
  margin-bottom: 0.3rem;
  white-space: nowrap;
}

.filter-container {
  width: fit-content;
  padding: 0.3rem;
  display: inline-block;
}

.filter-container button {
  font-size: 0.8rem;
  line-height: 2;
}

.filter-container button.active {
  border: 1px solid #0ba360;
  color: #0ba360;
}
