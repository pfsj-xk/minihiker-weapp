  align-items: center;
  border-bottom: 1px solid #ccc;
}
.code_txt{
  width: 25%;
  height: 100%;
  /* background: yellow; */
  text-align: center;
  line-height: 100rpx;
  font-size:28rpx ;
}
.code_input{
  width: 35%;
