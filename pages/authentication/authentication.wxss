  height: 100%;
  margin: 0;
  padding: 0;
}
/* 上传身份证 */
.id_cardBox{
  margin: 0 auto;
  margin-top: 20rpx;
  width: 90%;
  height: 200rpx;
  background: #f2f2f2;
  border-radius: 15rpx;
  border: 1px dashed #ccc;
  display: flex;
  /* justify-content: center; */
  align-items: center;
}
.idCard_img{
  width: 120rpx;
  height: 100rpx;
  margin-left: 10%;
}
.id_text{
  font-size: 30rpx;
  margin-left: 2%;
  margin-right: 10%;
}
.idCard_imgb{
  width: 60rpx;
  height: 60rpx;
}
.listbox{
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
}
.item_texta{
  width: 25%;
  text-align: center;
  font-size: 28rpx;
  color: #000;
}
.item_textb{
  font-size: 28rpx;
  color: #000;
}
.item_textb input{
  width: 100%;
  /* background: #fff; */
